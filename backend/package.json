{
  "name": "screengraph-backend",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "bun",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@statelyai/inspect": "^0.4.0",
    "@types/webdriverio": "^5.0.0",
    "dotenv": "^17.2.3",
    "encore.dev": "^1.50.6",
    "envalid": "^8.1.1",
    "ulidx": "^2.4.1",
    "webdriverio": "^9.20.0",
    "xstate": "^5.9.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@types/node": "^22.0.0",
    "@wdio/appium-service": "^9.20.0",
    "@wdio/cli": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/mocha-framework": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "appium": "^2.4.0",
    "appium-uiautomator2-driver": "^2.20.0",
    "vitest": "^2.0.0"
  },
  "scripts": {
    "dev": "encore run",
    "format": "bunx biome format --write .",
    "format:check": "bunx biome format --write=false .",
    "lint": "bunx biome lint .",
    "lint:fix": "bunx biome lint --apply .",
    "build": "echo 'Build handled by Encore CI'",
    "test": "bunx vitest run",
    "test:watch": "bunx vitest",
    "appium": "bash scripts/start-appium-service.sh",
    "appium:standalone": "bunx appium --allow-insecure=adb_shell --address 127.0.0.1 --port 4723",
    "wdio": "wdio run ./wdio.conf.js"
  }
}
