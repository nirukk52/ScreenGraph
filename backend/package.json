{
  "name": "screengraph-backend",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "bun",
  "dependencies": {
    "@types/webdriverio": "^5.0.0",
    "encore.dev": "^1.50.6",
    "ulidx": "^2.4.1",
    "webdriverio": "^9.20.0",
    "xstate": "^5.9.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@types/node": "^22.0.0",
    "vitest": "^2.0.0"
  },
  "scripts": {
    "dev": "encore run",
    "format": "bunx biome format --write .",
    "format:check": "bunx biome format --write=false .",
    "lint": "bunx biome lint .",
    "lint:fix": "bunx biome lint --apply .",
    "build": "echo 'Build handled by Encore CI'",
    "test": "bunx vitest run",
    "test:watch": "bunx vitest"
  }
}
