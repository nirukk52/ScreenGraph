{
  "name": "screengraph-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bash scripts/dev-with-ports.sh",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "gen": "encore gen client screengraph-ovzi --lang=typescript --output=./src/lib/encore-client.ts --env=local",
    "format": "bunx biome format --write .",
    "format:check": "bunx biome format --write=false .",
    "lint": "bunx biome lint .",
    "lint:fix": "bunx biome lint --apply ."
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.8.2",
    "@skeletonlabs/skeleton": "^4.1.4",
    "@skeletonlabs/skeleton-svelte": "^4.1.4",
    "clsx": "^2.0.0",
    "envalid": "^8.1.1",
    "lucide-svelte": "^0.425.0",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@sveltejs/adapter-vercel": "^4.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.9.1",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^6.0.0"
  }
}
