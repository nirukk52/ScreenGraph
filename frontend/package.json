{
  "name": "screengraph-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "FRONTEND_PORT=${FRONTEND_PORT:-5173} vite dev --port ${FRONTEND_PORT:-5173} --strictPort",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "gen": "encore gen client screengraph-ovzi --lang=typescript --output=./src/lib/encore-client.ts --env=local",
    "format": "bunx biome format --write .",
    "format:check": "bunx biome format --write=false .",
    "lint": "bunx biome lint .",
    "lint:fix": "bunx biome lint --apply .",
    "test:e2e": "playwright test",
    "test:e2e:headed": "HEADLESS=false playwright test",
    "test:e2e:ci": "HEADLESS=true playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.8.2",
    "clsx": "^2.1.1",
    "envalid": "^8.1.1",
    "lucide-svelte": "^0.425.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@playwright/test": "^1.48.0",
    "@skeletonlabs/skeleton": "^4.2.4",
    "@skeletonlabs/skeleton-svelte": "^4.2.4",
    "@sveltejs/adapter-vercel": "^4.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^24.9.1",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.0"
  }
}
