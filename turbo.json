{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "outputs": []
    },
    "qa:smoke": {
      "cache": false,
      "outputs": []
    },
    "qa:smoke:frontend": {
      "cache": false,
      "outputs": []
    },
    "qa:smoke:backend": {
      "cache": false,
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "test:e2e": {
      "cache": false,
      "outputs": [
        "test-results/**",
        "playwright-report/**"
      ]
    },
    "test:e2e:headed": {
      "cache": false,
      "outputs": [
        "test-results/**",
        "playwright-report/**"
      ]
    },
    "test:e2e:ci": {
      "cache": false,
      "outputs": [
        "test-results/**",
        "playwright-report/**"
      ]
    },
    "test:e2e:ui": {
      "cache": false,
      "outputs": []
    },
    "build": {
      "outputs": [
        "dist/**",
        "build/**"
      ]
    }
  }
}
