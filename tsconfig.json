{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "types": ["node"],
    "paths": {
      "~encore/*": ["./backend/encore.gen/*"],
      "~/*": ["./*"]
    },
    "composite": true,
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "backend/**/*.ts",
    "frontend/**/*.ts",
    "frontend/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "backend/encore.gen",
    "frontend/.svelte-kit",
    "frontend/dist"
  ]
}

