{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "extends": [],
  "files": {
    "ignore": [
      "**/node_modules",
      "**/encore.gen/**",
      "**/.encore/**",
      "**/.svelte-kit/**",
      "**/.vercel/**",
      "**/encore-client.ts",
      "**/dist/**",
      "backend/steering",
      "backend/tmp",
      "frontend/build",
      "**/.idea/**",
      "**/.vscode/**",
      "**/coverage/**",
      "**/build/**",
      "**/.turbo/**",
      "**/*.snap",
      "**/*.log",
      "**/.DS_Store"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 100,
    "lineEnding": "lf",
    "formatWithErrors": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}

